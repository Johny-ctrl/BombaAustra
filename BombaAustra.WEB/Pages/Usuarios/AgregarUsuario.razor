@page "/Usuarios/agregar"
@inject NavigationManager navigation
@inject SweetAlertService sweetAlertService
@inject IRepository repositorio
<h3>AgregarUsuario</h3>

<UsuarioForm @ref="usuarioForm" Usuario="usuario" OnValidSubmit="Create" 
    ReturnAction="Return" />

@code {
    private Usuario usuario = new();
    private TipoUsuario tipouser = new();
    private UsuarioForm? usuarioForm;

    private async Task Create()
    {
        var httpResponse = await repositorio.Post("/api/bomberos", usuario);
        if (httpResponse.Error)
        {
            var message = await httpResponse.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message);
            return;
        }
        usuarioForm!.formPostedSucces = true;
        navigation.NavigateTo("/AdminUsers");

    }

    private void Return()
    {
        usuarioForm!.formPostedSucces = true;
        navigation.NavigateTo("/AdminUsers");

    }

}
